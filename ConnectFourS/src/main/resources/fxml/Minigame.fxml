<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane styleClass="main" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.isec.a2019112789.connect4s.game.ui.gui.MinigameController">
    <children>
        <VBox styleClass="mainContent">
            <children>
                <Label text="What would you like to do?" />
                <Label fx:id="lName" />
                <HBox styleClass="mainContent">
                    <children>
                        <Button fx:id="btnConnect4" mnemonicParsing="false" onAction="#onBtnConnect4" styleClass="btn" text="Continue playing Connect 4" />
                        <Button fx:id="btnMinigame" mnemonicParsing="false" onAction="#onBtnMinigame" styleClass="btn" text="Play Minigame" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../css/Main.css" />
        <URL value="@../css/Minigame.css" />
    </stylesheets>
</Pane>
