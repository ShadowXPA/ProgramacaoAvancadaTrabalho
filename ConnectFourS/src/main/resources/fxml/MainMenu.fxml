<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane styleClass="main" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.isec.a2019112789.connect4s.game.ui.gui.MainMenuController">
    <children>
        <VBox styleClass="mainContent">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" styleClass="lTitle" text="Connect 4" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnPlay" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#onBtnPlay" styleClass="btn" text="Play" textAlignment="CENTER">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnLoad" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBtnLoad" styleClass="btn" text="Load Game" textAlignment="CENTER">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnReplay" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBtnReplay" styleClass="btn" text="Replay game" textAlignment="CENTER">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnExit" alignment="CENTER" cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBtnExit" styleClass="btn" text="Exit" textAlignment="CENTER">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../css/Main.css" />
        <URL value="@../css/MainMenu.css" />
    </stylesheets>
</Pane>
