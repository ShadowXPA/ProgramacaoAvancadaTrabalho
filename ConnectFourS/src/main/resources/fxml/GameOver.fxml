<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane styleClass="main" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.isec.a2019112789.connect4s.game.ui.gui.GameOverController">
    <stylesheets>
        <URL value="@../css/Main.css" />
        <URL value="@../css/GameOver.css" />
    </stylesheets>
    <children>
        <VBox styleClass="mainContent">
            <children>
                <Pane fx:id="paneBoard" prefHeight="200.0" prefWidth="200.0" styleClass="boardSpace" />
                <Label fx:id="lWinner" text="Winner:" />
                <VBox fx:id="vBoxWinner" styleClass="playerPane" />
                <Button fx:id="btnSave" mnemonicParsing="false" onAction="#onBtnSave" styleClass="btn" text="Save" />
                <Button fx:id="btnPlayAgain" mnemonicParsing="false" onAction="#onBtnPlayAgain" styleClass="btn" text="Play again" />
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBtnBack" styleClass="btn" text="Back to Main Menu" />
            </children>
        </VBox>
    </children>
</Pane>
